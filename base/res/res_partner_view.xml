            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='sales_purchases']//group" position="inside">
                    <field name="is_affiliated"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
